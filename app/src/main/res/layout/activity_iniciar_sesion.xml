<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_iniciar_sesion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="LockedOrientationActivity"
    tools:context="com.elisoft.serere.registro_inicio_sesion.Iniciar_sesion">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">
        <ImageView
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:layout_gravity="center|center"
            android:background="@drawable/ic_logo_max"
            />

    </FrameLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/area_nombre"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:padding="15sp"
        >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_margin="0sp"
            android:text="Registrate con tu número celular"
            android:textColor="#000"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:id="@+id/ll_crear_cuenta"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_bolivia"
                android:layout_marginTop="5sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+591 "
                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Número de telf."
                android:id="@+id/tv_registrate"
                android:gravity="center_vertical"
                android:textSize="20sp"

                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25sp"
            android:paddingBottom="5sp"
            android:text="@string/otra_cuenta"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/tv_iniciar_sesion"
            android:gravity="center_vertical"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_iniciar_sesion"
            android:background="@drawable/bk_facebook"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            android:gravity="center|center"
            android:layout_gravity="center|center"
            >
            <ImageView
                android:layout_width="20sp"
                android:layout_height="30sp"
                android:background="@drawable/facebook"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Continuar Con Facebook"
                android:gravity="center|center"
                android:textColor="@color/colorTextoBoton"
                android:layout_marginLeft="10sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_iniciar_google"
            android:background="@drawable/bk_google"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            android:gravity="center|center"
            android:layout_gravity="center|center"
            android:layout_marginTop="10sp"
            >
            <ImageView
                android:layout_width="40sp"
                android:layout_height="30sp"
                android:background="@drawable/google_pluss"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Continuar Con Google"
                android:gravity="center|center"
                android:textColor="@color/colorTextoBoton"
                android:layout_marginLeft="5sp"
                />

        </LinearLayout>





        <com.facebook.login.widget.LoginButton
            android:id="@+id/loginButton"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_margin="0sp"
            android:visibility="invisible"
            />
        <com.google.android.gms.common.SignInButton
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:id="@+id/bt_google"
            android:layout_margin="0sp"
            android:visibility="invisible"
            />

    </LinearLayout>










</LinearLayout>
