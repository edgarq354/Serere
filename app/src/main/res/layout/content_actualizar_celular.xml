<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".mi_perfil.Actualizar_celular"
    tools:showIn="@layout/activity_actualizar_celular">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|bottom"
        >


        <Button
            android:text="SIGUIENTE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/continuar"
            style="@style/submit2"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Te enviaremos un SMS para verificar tu número de teléfono. Introduce tu número telefónico.
"
            android:textColor="@color/colorPrimary_text"
            android:layout_margin="10sp"
            android:textSize="20sp"
            />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10sp"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_bolivia"
                android:layout_marginTop="5sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+591 "
                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center_vertical"
                />

            <EditText
                android:id="@+id/celular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLength="8"
                android:hint="75602869"
                android:inputType="phone"
                android:textColor="@color/colorPrimary_text"
                android:textSize="20sp"
                />
        </LinearLayout>



    </LinearLayout>

</FrameLayout>
