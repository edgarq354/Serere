<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15sp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_recargar"
    tools:context="com.elisoft.serere.MainActivity">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:src="@drawable/bannergif"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NÃºmero Celular:"
        android:gravity="center"
        android:textSize="22dp"
        android:fontFamily="@font/sultan_nahia"
        android:textColor="@color/colorIcons"
        android:layout_marginTop="10sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:id="@+id/et_telefono"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="7XXXXXXX"
            android:inputType="number"
            android:textColor="@color/colorIcons"
            android:textSize="38dp"
            android:fontFamily="@font/titillium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monto:"
        android:textColor="@color/colorIcons"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="22dp"
        android:fontFamily="@font/sultan_nahia"
        android:layout_marginTop="10sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:id="@+id/et_monto"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="0"
            android:inputType="number"
            android:text="0"
            android:fontFamily="@font/titillium"
            android:textSize="30dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>






    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Empresa:"
        android:textAlignment="center"
        android:textSize="22dp"
        android:fontFamily="@font/sultan_nahia"
        android:textColor="@color/colorIcons"
        android:layout_marginTop="10sp"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIGO"
            android:layout_weight="1"
            android:textColor="#1B38DD"
            android:textStyle="bold"
            android:id="@+id/rb_tigo"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIVA"
            android:layout_weight="1"
            android:textColor="#2F9833"
            android:textStyle="bold"
            android:id="@+id/rb_viva"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ENTEL"

            android:textColor="#007CB5"
            android:textStyle="bold"
            android:id="@+id/rb_entel"/>

    </RadioGroup>

    <Button
        android:id="@+id/bt_guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recargar"
        android:layout_marginTop="30sp"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="390dp"
        tools:ignore="MissingConstraints"
        android:textAllCaps="false"
        style="@style/submit_positivo"
        />

    <Button
        android:id="@+id/bt_recargas"
        style="@style/submit_negativo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de Recargas"
        android:textAllCaps="false"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="390dp" />


</LinearLayout>